{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", "${workspaceFolder}/dev-board",
        "-B", "${workspaceFolder}/build",
        "-G", "Ninja"
      ],
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "${workspaceFolder}/build"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["cmake: configure"]
    },
    {
      "label": "flash: stlink (CubeProgrammer)",
      "type": "shell",
      "command": "C:/ST/STM32CubeCLT_1.15.1/STM32CubeProgrammer/bin/STM32_Programmer_CLI.exe",
      "args": [
        "-c", "port=SWD",
        "-w", "${workspaceFolder}/build/dev-board.elf",
        "-v",
        "-rst"
      ],
      "problemMatcher": [],
      "dependsOn": ["cmake: build"]
    }
  ]
}
